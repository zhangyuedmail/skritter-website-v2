    var height = window.innerHeight - (window.innerWidth > 768 ? 170 : 230);
    if (window.innerHeight < 530 && window.innerWidth <= 768) {
      height = window.innerHeight - 190;
    }

    landingWrapper.style.height = height + 'px';

